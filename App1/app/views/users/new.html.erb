<h1>Users#new</h1>
<p>Find me in app/views/users/new.html.erb</p>


<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>
  <% end %>
  <div>
    <label>First Name</label>
    <%= f.text_field :first_name %>
  </div>
  <div>
    <label>Last Name</label>
    <%= f.text_field :last_name %>
  </div>
  <div>
    <label>Email</label>
    <%= f.text_field :email %>
  </div>
  <div>
    <label>Phone Number</label>
    <%= f.text_field :phone %>
  </div>
  <div>
    <label>Gender</label>
    <%= f.text_field :gender %>
  </div>

  <%= f.submit "Create" %>
<% end %>
